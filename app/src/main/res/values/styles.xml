<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/lightblue</item>
        <item name="colorPrimary">?android:attr/statusBarColor</item>
        <item name="colorPrimaryDark">?android:attr/statusBarColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Background" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:statusBarColor">@color/lightblue</item>
    </style>


</resources>
